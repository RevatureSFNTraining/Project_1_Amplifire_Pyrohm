<apex:page standardStylesheets="false" showheader="false" Controller="transactionLU">
    <c:SiteHeader />
	<apex:stylesheet value="{!$Resource.styles}"/>
    <style>
    .tableLU{
		display:inline-block;
    	width: 15%;
        height: 360px;
        overflow: scroll;
        vertical-align: top;
	}
    #Main{
    	width: 69%;
	}
    table {
    	width: 100%;   
        height: 100%
        
    }
    </style>
    <div class="wrapper">
		<apex:pageBlock >
              <div class="tableLU" id="Main">
                <apex:pageBlockTable id="innerTable" value="{!ctc}" var="tc">
                    <apex:column value="{!tc.Contact__c}"/>
                    <apex:column value="{!tc.Employee__c}"/>
                    <apex:column value="{!tc.Meal__c}"/>
                    <apex:column value="{!tc.Sale_Price__c}"/>
                </apex:pageBlockTable>
            </div>
            <div class="tableLU">
                <apex:pageBlockTable value="{!contact}" var="cc">
                    <apex:column value="{!cc.name}"/>	
                </apex:pageBlockTable>
            </div>
            <div class="tableLU">
                <apex:pageBlockTable value="{!employee}" var="ec">
                    <apex:column value="{!ec.name}"/> 
                </apex:pageBlockTable>
            </div>
		</apex:pageBlock>
     </div>
</apex:page>